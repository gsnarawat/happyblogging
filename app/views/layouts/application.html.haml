!!!
%html
  %head
    %title Gopal's Blog
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    =render :partial=>"layouts/header"
    -if(notice)
      %p.notice{:style=>"background:seagreen;line-height: 45px;text-align: center;color: yellow;font-size: 25px;height: 45px;text-decoration: blink;margin-left: 50px;margin-top: 50px;width:500px;"}= notice
    %div{:style=>"margin: 0 0 0 0;"}      
    = yield
    =render :partial=>"layouts/footer"